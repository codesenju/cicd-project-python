pipeline {
    agent {label 'k8s-agent'}
    environment {
        GITHUB_TOKEN = credentials('github_token')
    }
    stages {
        stage('Checkout') {
            steps {
                sh "git clone https://$GITHUB_TOKEN@github.com/codesenju/cicd-project-python.git"
            }
        }
        stage('Build Image') {
            steps {
                sh 'cd cicd-project-python && ls -la && cat Dockerfile'
                sh 'cd cicd-project-python && docker build -t test .'
            }
        }
        stage('Push Image') {
            steps {
                withDockerRegistry([credentialsId: "dockerhub", url: "docker.io"]) {
                    sh 'echo publish'
                    sh 'ls -la'
                    sh 'pwd'
                }
            }
        }
    }
}
